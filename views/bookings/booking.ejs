<% layout('layouts/boilerplate') -%>

<body>
    <div class="max-w-2xl mx-auto mt-10 bg-white p-6 rounded-lg shadow-lg">
        <h2 class="text-2xl font-semibold mb-4 text-center">Book Your Stay</h2>

        <form action="/listings/<%= listing._id %>/book" method="POST" class="space-y-4">
            <div>
                <label for="checkIn" class="block text-sm font-medium text-gray-700">Check-in Date:</label>
                <input type="date" id="checkIn" name="checkIn" required
                    class="mt-1 p-2 w-full border rounded-lg focus:ring focus:ring-blue-300">
            </div>

            <div>
                <label for="checkOut" class="block text-sm font-medium text-gray-700">Check-out Date:</label>
                <input type="date" id="checkOut" name="checkOut" required
                    class="mt-1 p-2 w-full border rounded-lg focus:ring focus:ring-blue-300">
            </div>

            <button type="submit"
                class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition">
                Confirm Booking
            </button>
        </form>
    </div>
</body>
