<% layout('layouts/boilerplate') -%>
<body class="bg-gray-100 min-h-screen flex flex-col">
    <main class="flex-1 p-6">
        <!-- Form Container -->
        <div class="max-w-3xl mx-auto bg-white shadow-lg rounded-lg p-8">
            <h2 class="text-3xl font-semibold text-center text-gray-800 mb-8">Edit Listing</h2>

            <!-- Form Start -->
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data">
                <!-- Title Field -->
                <div class="mb-6">
                    <label for="title" class="block text-gray-700 font-medium mb-2">Title</label>
                    <input id="title" type="text" name="listing[title]" value="<%= listing.title %>" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <!-- Description Field -->
                <div class="mb-6">
                    <label for="description" class="block text-gray-700 font-medium mb-2">Description</label>
                    <textarea id="description" name="listing[description]" rows="6" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"><%= listing.description %></textarea>
                </div>

                <!-- Price Field -->
                <div class="mb-6">
                    <label for="price" class="block text-gray-700 font-medium mb-2">Price</label>
                    <input id="price" type="number" name="listing[price]" value="<%= listing.price %>" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <!-- Location Field -->
                <div class="mb-6">
                    <label for="location" class="block text-gray-700 font-medium mb-2">Location</label>
                    <input id="location" type="text" name="listing[location]" value="<%= listing.location %>" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <!-- Country Field -->
                <div class="mb-6">
                    <label for="country" class="block text-gray-700 font-medium mb-2">Country</label>
                    <input id="country" type="text" name="listing[country]" value="<%= listing.country %>" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <!-- Image Field -->
                <div class="mb-6">
                    <label for="image" class="block text-gray-700 font-medium mb-2">Upload the Image</label>
                    <input id="image" type="file" name="listing[image]"
                        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                
                    <!-- Display the current image URL if no new file is selected -->
                    <% if (listing.image) { %>
                        <div class="mt-2">
                            <p>Current Image:</p>
                            <img src="<%= listing.image.url %>" alt="Current Image" class="w-32 h-32 object-cover">
                        </div>
                    <% } %>
                </div>
                

                <!-- Submit Button -->
                <div class="flex justify-center">
                    <button type="submit" class="bg-blue-500 text-white py-2 px-6 rounded-md hover:bg-blue-600 transition duration-300">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </main>
</body>
