<% layout('layouts/boilerplate') -%>

    <body>
        <h2 class="text-3xl font-semibold text-center my-6 text-red-500">Your Listings</h2>

        <!-- Listings Container -->
        <div class="container mx-auto grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 px-4">
            <% for (let data of listings) { %>
                <a href="/listings/<%= data._id %>"
                    class="group block bg-white shadow-lg rounded-lg overflow-hidden transition transform hover:scale-105 hover:shadow-xl">
                    <!-- Image Section -->
                    <img src="<%= data.image.url %>" alt="<%= data.title %>"
                        class="w-full h-48 object-cover group-hover:opacity-80 transition duration-300">
                        <!-- Card Content -->
                        <div class="p-4">
                        <p><i>Owner: <%= currUser.username %></i></p>
                        <h3
                            class="text-xl font-semibold text-gray-800 mb-2 group-hover:text-yellow-500 transition duration-300">
                            <%= data.title %>
                        </h3>
                        <p class="text-gray-600 text-sm mb-2 line-clamp-3">
                            <%= data.description %>
                        </p>
                        <p class="text-gray-500 text-sm"><strong>Location:</strong>
                            <%= data.location %>
                        </p>
                        <p class="text-gray-500 text-sm"><strong>Country:</strong>
                            <%= data.country %>
                        </p>
                        <p class="text-lg font-bold text-gray-800 mt-2">&dollar;<%= data.price %>
                        </p>
                    </div>
                </a>
                <% } %>
        </div>
    </body>