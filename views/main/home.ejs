    </div>

    <script>
        function animateCounter(id, target, duration) {
            let start = 0;
            const step = Math.ceil(target / (duration / 16));
            function updateCounter() {
                start += step;
                if (start >= target) {
                    document.getElementById(id).innerText = target.toLocaleString();
                } else {
                    document.getElementById(id).innerText = start.toLocaleString();
                    requestAnimationFrame(updateCounter);
                }
            }
            updateCounter();
        }

        function toggleFAQ(num) {
            const faq = document.getElementById(`faq${num}`);
            const button = faq.previousElementSibling.querySelector("button");
            faq.classList.toggle("hidden");
            button.innerText = faq.classList.contains("hidden") ? "+" : "−";
        }

        document.addEventListener("DOMContentLoaded", function () {
            animateCounter("counter-customers", 100000, 2000);
            animateCounter("counter-locations", 1000, 2000);
            animateCounter("counter-bookings", 1000, 2000);
        });
    </script>