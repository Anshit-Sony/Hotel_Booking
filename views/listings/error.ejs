<% layout('layouts/boilerplate') -%>
<body class="bg-gray-100 h-screen flex flex-col">

    <main class="flex-1 h-[450px] flex items-center justify-center p-6">
        <!-- Error Message Container -->
        <div class="max-w-3xl mx-auto bg-white shadow-lg rounded-lg p-8 border border-red-500">
            <!-- Error Status and Message -->
            <h2 class="text-3xl font-semibold text-center text-red-500 mb-6">
                <%= status %> Error
            </h2>
            <p class="text-center text-lg text-gray-800 mb-6">
                <%= message %>
            </p>
            <!-- Optional Suggestion -->
            <div class="flex justify-center">
                <a href="/listings" class="bg-blue-500 text-white py-3 px-8 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-300">
                    Go Back to Homepage
                </a>
            </div>
        </div>
    </main>

</body>
