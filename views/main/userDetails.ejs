<% layout('layouts/boilerplate') -%>
<div class="max-w-2xl mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg text-center">
    <!-- User Icon -->
    <div class="flex justify-center">
        <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" 
             alt="User Icon" 
             class="w-24 h-24 rounded-full">
    </div>

    <!-- User Details -->
    <h2 class="mt-4 text-2xl font-bold"><%= user.username %></h2>
    <p class="text-gray-600"><%= user.email %></p>

    <!-- User Links -->
    <div class="mt-6 space-y-4">
        <a href="/yourlistings" 
           class="block bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600 transition">
            Your Listings
        </a>
        <a href="/listings/new" 
           class="block bg-green-500 text-white py-2 px-4 rounded-lg hover:bg-green-600 transition">
            Add a Listing
        </a>
        <a href="/listings" 
           class="block bg-gray-500 text-white py-2 px-4 rounded-lg hover:bg-gray-600 transition">
            View All Listings
        </a>
    </div>
</div>
